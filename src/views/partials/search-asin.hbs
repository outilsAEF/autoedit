
<div class="container">
  <div class="d-flex justify-content-center py-5 width-90">
    <form class='search-asin-form w-75' role='search' method='get' action='/book'>
    {{!-- <form class='search-asin-form w-75' role='search' method='get' action='/{{adminParam}}'> --}}
      {{!-- '{{adminParam}}' --}}
      <div class="input-group gap-2">        
        <input
          id='asin'
          name='asin'
          type='search'
          class='form-control input-asin'
          placeholder='Saisir un ASIN ...'
          aria-label='Saisir un ASIN'
          aria-describedby="basic-addon1"
          minlength="10"
          maxlength="10"
          required 
        />
        <button class="search-asin-btn btn btn-primary" type="submit">
          <span class="search-asin-btn-text">Chercher</span>
          <span class="search-asin-btn-text-loading d-none">En cours 
            <span class="spinner-border spinner-border-sm" role="status"></span>
          </span>
        </button>
      </div>
    </form>
  </div>
  {{!-- <p>adminparam[{{adminParam}}]</p> --}}
  
  {{#if error}}
    <div class="alert alert-danger d-flex justify-content-center p-1 fs-6 mb-5">    
      {{error.message}}
    </div>
  {{/if}}
  
 
  
  
</div>
<script defer src="assets/js/search-asin.js"></script>