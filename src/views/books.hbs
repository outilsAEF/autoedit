<html>
  <head>
    <meta charset='utf-8' />
    <title>Auto Edit - Informations sur l'ASIN {{book.asin}}</title>
  </head>
  <body>

    <h4>Titre</h4>
    <a href='{{book.url}}'>{{book.title}}</a>

    <h4>ASIN</h4>
    {{book.asin}}

    <h4>Auteur(s)</h4>
    {{!-- {{book.authors.join('&nbsp;;&nbsp;')}} --}}
    {{book.authors}}

    <h4>Image</h4>
    <img src='{{book.coverUrl}}' />

    <h4>Classement global: {{book.globalRank}}</h4>

    <h4>Cat√©gories</h4>
    <ul>
      {{#each book.categories}}
        <li>
          <a href='{{url}}'>{{categoryTree}}</a>
          {{#if rank}}
            (Classement:
            {{rank}})
          {{/if}}
        </li>
      {{/each}}

    </ul>
  </body>
</html>