<html>
  <head>
    <meta charset='utf-8' />
    <title>Auto Edit </title>
  </head>
  <body>
    <h4>Titre</h1>
      <a href='{{book.url}}'>{{book.title}}</a>

      <h4>ASIN</h4>
      {{book.asin}}

      <h4>Auteur(s)</h4>
      {{!-- {{book.authors.join('&nbsp;;&nbsp;')}} --}}
      {{book.authors}}

